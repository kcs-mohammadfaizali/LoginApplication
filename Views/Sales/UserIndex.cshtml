
@{
    ViewBag.Title = "UserIndex";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3><i class="fa fa-shopping-cart"></i> Medicine Sales Details</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <ul class="nav navbar-right panel_toolbox">
                            <a href="UserOrder" class="btn btn-sm btn-info text-white"><i class="fa fa-plus"></i> Order Medicines</a>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="tblSales" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Transaction Id</th>
                                    <th>Patient Name</th>
                                    <th>Prescription Id</th>
                                    <th>Medicine Name</th>
                                    <th>Quantity</th>
                                    <th>Price Per Unit</th>
                                    <th>Total Price</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts{
    @*
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
        <link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css" rel="stylesheet" type="text/css" />*@
    <script type="text/javascript">
        $(function () {
            $.ajax({
                type: "POST",
                url: "/Sales/UserAjaxMethod",
                data: '{}',
                contentType: "application/json; charset=utf-8",
                dataType: "json", //html,string,json
                success: OnSuccess,
                failure: function (response) {
                    alert(response.d);
                },
                error: function (response) {
                    alert(response.d);
                }
            });
        });
        function OnSuccess(response) {
            $("#tblSales").DataTable(
                {
                    bLengthChange: true,
                    lengthMenu: [[5, 10, -1], [5, 10, "All"]],
                    bFilter: true,
                    bSort: true,
                    bPaginate: true,
                    data: response,
                    columns: [
                        {'data': 'id'},
                        { 'data': 'Name' },
                        { 'data': 'Prescription_id' },
                        { 'data': 'Medicine_name' },
                        { 'data': 'quantity' },
                        { 'data': 'price' },
                        { 'data': 'totalprice' },
                        {
                            'data': 'Date',
                            'render': function (jsonDate) {
                                var date = new Date(parseInt(jsonDate.substr(6)));
                                var month = ("0" + (date.getMonth() + 1)).slice(-2);
                                return ("0" + date.getDate()).slice(-2) + '-' + month + '-' + date.getFullYear();
                            }
                        },
                    ]
                });
        };
    </script>
}


